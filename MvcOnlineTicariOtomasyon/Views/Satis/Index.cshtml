@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 class="mt-4">Satış Hareketleri Yönetimi</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="index.html">Satış</a></li>
    <li class="breadcrumb-item active">Index</li>
</ol>
<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Satış Hareketleri Tablosu</div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tbl1" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ürün</th>
                        <th>Marka</th>
                        <th>Cari</th>
                        <th>Personel</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th>Toplam Tutar</th>
                        <th>Tarih</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Ürün</th>
                        <th>Marka</th>
                        <th>Cari</th>
                        <th>Personel</th>
                        <th>Adet</th>
                        <th>Fiyat</th>
                        <th>Toplam Tutar</th>
                        <th>Tarih</th>
                        <th>Güncelle</th>
                        <th>Detaylar</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SatisHareketID</td>
                            <td>@item.Urun.UrunAd</td>
                            <td>@item.Urun.UrunMarka</td>
                            <td>@item.Cari.CariAd @item.Cari.CariSoyad</td>
                            <td>@item.Personel.PersonelAd @item.Personel.PersonelAd</td>
                            <td>@item.SatisHareketAdet</td>
                            <td>@item.SatisHareketFiyat</td>
                            <td>@item.SatisHareketToplamTutar</td>
                            <td>@item.SatisHareketTarih</td>
                            <td><a href="/Satis/SatisGetir/@item.SatisHareketID" class="btn btn-danger">Güncelle</a></td>
                            <td><a href="/Satis/SatisDetay/@item.SatisHareketID" class="btn btn-info">Detay</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Satis/YeniSatisYap/" class="btn btn-success">Satış Yap</a>
            <br /><br />
        </div>
    </div>
</div>



