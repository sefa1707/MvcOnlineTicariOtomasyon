@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 class="mt-4">Ürün Yönetimi</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="index.html">Ürün</a></li>
    <li class="breadcrumb-item active">Index</li>
</ol>
<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Ürün Tablosu</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ürün Adı</th>
                        <th>Marka</th>
                        <th>Stok</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Durum</th>
                        <th>Görsel</th>
                        <th>Kategori</th>
                        <th>Düzenle</th>
                        <th>Pasif Yap</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Ürün Adı</th>
                        <th>Marka</th>
                        <th>Stok</th>
                        <th>Alış Fiyatı</th>
                        <th>Satış Fiyatı</th>
                        <th>Durum</th>
                        <th>Görsel</th>
                        <th>Kategori</th>
                        <th>Düzenle</th>
                        <th>Pasif Yap</th>

                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UrunID</td>
                            <td>@item.UrunAd</td>
                            <td>@item.UrunMarka</td>
                            <td>@item.UrunStok</td>
                            <td>@item.UrunAlisFiyat</td>
                            <td>@item.UrunSatisFiyati</td>
                            <td>@item.UrunDurum</td>
                            <td><img src="@item.UrunGorsel" class="rounded" alt="..." width="50" height="50"></td>
                            <td>@item.Kategori.KategoriAd</td>
                            <td><a href="/Urun/UrunGetir/@item.UrunID" class="btn btn-primary">Düzenle</a></td>
                            <td><a href="/Urun/UrunPasifYap/@item.UrunID" class="btn btn-danger">Pasif Yap</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Urun/UrunEkle" class="btn btn-success">Ürün Ekle</a>
            <br /><br />
        </div>
    </div>
</div>

