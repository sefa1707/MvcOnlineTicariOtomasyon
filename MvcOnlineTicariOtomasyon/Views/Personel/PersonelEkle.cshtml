@model MvcOnlineTicariOtomasyon.Models.Siniflar.Personel
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 class="mt-4">Personel Yönetimi</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="index.html">Personel</a></li>
    <li class="breadcrumb-item active">Personel Ekle</li>
</ol>
@using (Html.BeginForm("PersonelEkle", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{<form method="post" class="form-group">
    <br />
    <label>Personel Adı</label>
    <br />
    @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control" })
    <br />
    <label>Personel Soyadı</label>
    <br />
    @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control" })
    <br />
    <label>Personel Departmanı</label>
    <br />
    @*@Html.TextBoxFor(x => x.Kategoriid, new { @class = "form-control" })*@
    @Html.DropDownListFor(x => x.Departmanid, (List<SelectListItem>)ViewBag.departmanadi, new { @class = "form-control" })
    <br />
    <label>Personel Görsel</label>
    <br />
    @*@Html.TextBoxFor(x => x.PersonelGorsel, new { @class = "form-control" })*@
    <input type="file" name="PersonelGorsel" />
    <br />
    <label>Personel Durum</label>
    <br />
    @Html.TextBoxFor(x => x.PersonelDurum, new { @class = "form-control" })
    <br />
    <label>Personel Mail</label>
    <br />
    @Html.TextBoxFor(x => x.PersonelMail, new { @class = "form-control" })
    <br />
    <label>Personel Şifre</label>
    <br />
    @Html.TextBoxFor(x => x.PersonelSifre, new { @class = "form-control" })
    <br />
    <label>Personel Telefon</label>
    <br />
    @Html.TextBoxFor(x => x.PersonelTelefon, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kaydet</button>
    <br />
</form>}