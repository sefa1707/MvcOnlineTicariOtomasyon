@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1 class="mt-4">Personel Yönetimi</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="index.html">Personel</a></li>
    <li class="breadcrumb-item active">Index</li>
</ol>
<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Personel Tablosu</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Görsel</th>
                        <th>Departman</th>
                        <th>Durum</th>
                        <th>Düzenle</th>
                        <th>Pasif</th>
                        <th>Satış Geçmişi</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th>Görsel</th>
                        <th>Departman</th>
                        <th>Durum</th>
                        <th>Düzenle</th>
                        <th>Pasif</th>
                        <th>Satış Geçmişi</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PersonelID</td>
                            <td>@item.PersonelAd</td>
                            <td>@item.PersonelSoyad</td>
                            @*<td>@item.PersonelGorsel</td>*@
                            <td><img src="@item.PersonelGorsel" class="rounded" alt="..." width="100" height="100"></td>
                            <td>@item.Departman.DepartmanAd</td>
                            <td>@item.PersonelDurum</td>
                            <td><a href="/Personel/PersonelGetir/@item.PersonelID" class="btn btn-primary">Düzenle</a></td>
                            @*<td><a href="/Cari/CariSil/@item.CariID" class="btn btn-danger">Sil</a></td>*@
                            <td><a href="/Cari/CariPasifYap/@item.PersonelID" class="btn btn-info">Pasif Yap</a></td>
                            <td><a href="/Departman/DepartmanPersonelSatis/@item.PersonelID" class="btn btn-info">Detay</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a href="/Personel/PersonelEkle" class="btn btn-success">Personel Ekle</a>
            <br /><br />
        </div>
    </div>
</div>